{
    "package": {
        "productName": "WeRead",
        "version": "1.0.0"
    },
    "tauri": {
        "security": {
            "csp": null
        },
        "updater": {
            "active": false
        },
        "systemTray": {
            "iconPath": "png/weread_512.png",
            "iconAsTemplate": true
        },
        "allowlist": {
            "all": true,
            "fs": {
                "all": true,
                "scope": [
                    "$DOWNLOAD/*"
                ]
            }
        }
    },
    "build": {
        "withGlobalTauri": true,
        "devPath": "../dist",
        "distDir": "../dist",
        "beforeBuildCommand": "",
        "beforeDevCommand": ""
    }
}
